@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
}

<div class="row justify-content-center">
    <div class="col-md-7 p-5 mt-5 border border-1 text-white" style="background-color: #0d0d0d; border-color: goldenrod!important;">
    <h1 class="text-center">@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true" style="background-color: #2B2B2B!important; color: #DDDDDD;"/>
                    <label asp-for="Input.Email" class="form-label" ></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" placeholder="Hasło" autocomplete="current-password" aria-required="true" style="background-color: #2B2B2B; color: #DDDDDD;"/>
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-dark">Zaloguj się</button>
                </div>
                <div class="mt-3">
                    <p>
                        <a style="color: goldenrod;" id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasła?</a>
                    </p>
                    <p>
                        <a style="color: goldenrod;" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Wyślij ponownie potwierdzenie e-mail</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
