@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Potiwerdzenie adresu e-mail";
}

<div class="text-center text-white p-5" style="background-color: #0d0d0d; border: 1px solid goldenrod;">
    <h1>@ViewData["Title"]</h1>
    @{
        if (@Model.DisplayConfirmAccountLink)
        {
            <p>
                Aplikacja nie posiada jeszcze zaimplementowanej metody wysyłanie wiadomości email, sprawdź -> <a href="https://aka.ms/aspaccountconf">dokumentację</a>.
               <a id="confirm-link" href="@Model.EmailConfirmationUrl">Kliknij tutaj aby ręcznie aktywować swoje konto</a>
            </p>
        }
        else
        {
            <p>
                Wiadomość z linkiem aktywacyjnym Twojego konta została wysłana na podany adres e-mail.
            </p>
        }
    }
</div>


