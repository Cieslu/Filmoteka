@model Comment

<section>
    <div class="p-5 mt-5 border border-1 text-white" style="background-color: #0d0d0d; border-color: goldenrod!important;">
        <form method="post">
            <div class="text-center border-bottom">
                <h1>Dodaj komentarz do odcinka</h1>
            </div>
            <div class="mt-3">
                <div class="form-floating mb-3">
                    <textarea asp-for="Description" placeholder="komentarz..." class="form-control"></textarea>
                    <label class="form-label" asp-for="Description"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center mt-5">
                    <button type="submit" class="btn btn-dark btn-size btn-font">Dodaj</button>
                    <a asp-controller="Series" asp-action="EpisodeDetails" asp-route-id="@TempData["id"]" class="btn btn-dark ms-1 btn-font">Wróć do odcinka</a>
                </div>
            </div>
        </form>
    </div>
</section>