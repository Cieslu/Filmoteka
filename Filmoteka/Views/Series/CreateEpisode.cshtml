@{
    ViewData["Title"] = "Dodaj film";
}
@using Filmoteka.Models.ViewModels
@model EpisodeVievModel

<section>
    <div class="p-5 mt-5 border border-1 text-white" style="background-color: #0d0d0d; border-color: goldenrod!important;">
        <form method="post" enctype="multipart/form-data">
            <div class="text-center border-bottom">
                <h1>Dodaj odcinek</h1>
            </div>

            <div class="mt-3">
                <div class="form-floating mb-3">
                    <input asp-for="Episode.Title" class="form-control" placeholder="Podaj tytuł" />
                    <label class="form-label" asp-for="Episode.Title"></label>
                    <span asp-validation-for="Episode.Title" class="text-danger"></span>     

                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Episode.Date" class="form-control" placeholder="Podaj datę">
                    <label class="form-label" asp-for="Episode.Date"></label>
                    <span asp-validation-for="Episode.Date" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <textarea asp-for="Episode.Description" class="form-control" rows="3" placeholder="Maksymalnie 400 znaków" style="background-color: #2B2B2B; color: #DDDDDD;"></textarea>
                    <label class="form-label" asp-for="Episode.Description"></label>
                    <span asp-validation-for="Episode.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Episode.Image"></label>
                    <input class="form-control" asp-for="Episode.Image" type="file">
                    <span asp-validation-for="Episode.Image" class="text-danger"></span>
                    <span class="text-danger">@Html.ValidationMessage("IncorrectExtensionError")</span>
                    <span class="text-danger">@ViewData["ErrorImage"]</span>
                </div>

                <div class="d-flex justify-content-center mt-5">
                    <button type="submit" class="btn btn-dark btn-size btn-font" asp-route-id="@TempData["id"]">Dodaj</button>
                    <a asp-controller="Series" asp-action="SesonDetails" asp-route-id="@TempData["id"]" class="btn btn-dark btn-font ms-1">Wróć do listy odcinków</a>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
