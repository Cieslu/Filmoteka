@{
    ViewData["Title"] = "Dodaj film";
}
@using Filmoteka.Models.ViewModels
@model MovieGenreCommentsViewModel

<section>
    <div class="p-5 mt-5 border border-1 text-white" style="background-color: #0d0d0d; border-color: goldenrod!important;">
        <form method="post" enctype="multipart/form-data">
            <div class="text-center border-bottom">
                <h1>Dodaj serial</h1>
            </div>

            <div class="mt-3">
                <div class="form-floating mb-3">
                    <input asp-for="Series.Title" class="form-control" placeholder="Tytuł" style="background-color: #2B2B2B; color: #DDDDDD;"/>
                    <label class="form-label" asp-for="Series.Title"></label>
                    <span asp-validation-for="Series.Title" class="text-danger"></span>     

                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Series.Director" class="form-control" placeholder="Reżyser" style="background-color: #2B2B2B; color: #DDDDDD;">
                    <label class="form-label" asp-for="Series.Director"></label>
                    <span asp-validation-for="Series.Director" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Series.RelaseDate" class="form-control" placeholder="Data" style="background-color: #2B2B2B; color: #DDDDDD;"/>
                    <label class="form-label" asp-for="Series.RelaseDate"></label>
                    <span asp-validation-for="Series.RelaseDate" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <textarea asp-for="Series.Description" class="form-control" rows="3" placeholder="Opis" style="background-color: #2B2B2B; color: #DDDDDD;"></textarea>
                    <label class="form-label" asp-for="Series.Description"></label>
                    <span asp-validation-for="Series.Description" class="text-danger" style="background-color: #2B2B2B; color: #DDDDDD;"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Series.Image"></label>
                    <input class="form-control" asp-for="Series.Image" type="file" style="background-color: #2B2B2B; color: #DDDDDD;">
                    <span asp-validation-for="Series.Image" class="text-danger"></span>
                    <span class="text-danger">@Html.ValidationMessage("IncorrectExtensionError")</span>
                    <span class="text-danger">@ViewData["ErrorImage"]</span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Series.Video" class="form-control" placeholder="Link" style="background-color: #2B2B2B; color: #DDDDDD;">
                    <label class="form-label" asp-for="Series.Video"></label>
                    <small class="text-muted d-block"><i class="bi bi-info-circle mx-1"></i> Link do filmu w serwisie YouTube "https://www.youtube.com/watch?v=G1IbRujko-A"</small>
                    <span asp-validation-for="Series.Video" class="text-danger"></span>
                    <span class="text-danger">@ViewData["ErrorVideo"]</span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Series.MovieSeriesGenreId"></label>
                    <select class="form-control" asp-for="Series.MovieSeriesGenreId" asp-items="ViewBag.GenreId" multiple style="background-color: #2B2B2B; color: #DDDDDD;">
                    </select>
                    <span asp-validation-for="Series.MovieSeriesGenreId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center mt-5">
                    <button type="submit" class="btn btn-dark btn-size btn-font">Dodaj</button>
                    <a asp-controller="Home" asp-action="Series" class="btn btn-dark btn-font ms-1">Wróć do strony głównej</a>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
